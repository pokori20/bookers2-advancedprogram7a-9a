
<%= render 'users/list', book: @book, user: @user %>
<div class="col-md-8 offset-md-1">
  <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<h1>Books</h1>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= link_to attachment_image_tag(book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:'40x40'),user_path(book.user.id) %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
          <td id="favorite_buttons_<%= book.id %>">
            <%= render 'favorites/favorite-btn', book: book %>
          </td>
          <td>
            <%= link_to " コメント数 : #{book.book_comments.count}", book_path(book.id) %>
          </td>
          <td>閲覧数: <%= book.impressions_count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>